<div class="{$size}">
    <div class="panel panel-default" style="border-left: 5px solid {$colore} !important;">
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-3">
                    <span class="material-icons" style="color: {$colore};">{$icona}</span>
                </div>
                <div class="col-xs-9 text-right">
                    <div style="font-size: 1.3rem;">{$titolo}</div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <span class="pull-left">{$messaggio}</span>
            <div class="pull-right">
                <span class="badge">{$totale}</span>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>